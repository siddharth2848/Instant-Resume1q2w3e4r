<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo_sm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView13"
        android:background="@drawable/share2_lt"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView17"
        android:layout_alignEnd="@+id/imageView17" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView17"
        android:background="@drawable/share"
        android:layout_alignTop="@+id/imageView13"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Let's make one"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:background="#212338"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tut3_header"
        android:textSize="25dp"
        android:textColor="#212338"
        android:id="@+id/textView"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/imageView17"
        android:layout_toLeftOf="@+id/imageView13"
        android:layout_toStartOf="@+id/imageView13" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/tut3_desc"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="#212338"
        android:textSize="13dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView9"
        android:background="@drawable/circle_em"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView10"
        android:background="@drawable/circle_em"

        android:layout_alignTop="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView11"
        android:background="@drawable/circle_fl"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/imageView10" />

</RelativeLayout>
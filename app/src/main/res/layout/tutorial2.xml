<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo_sm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:id="@+id/imageView14"

        android:background="@drawable/info"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tut2_header"
        android:textSize="25dp"
        android:textColor="#212338"
        android:id="@+id/textView"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/tut2_desc"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="#212338"
        android:textSize="13dp"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView9"
        android:background="@drawable/circle_em"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/imageView10"
        android:layout_marginRight="35dp"
        android:layout_toStartOf="@+id/imageView10" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView10"
        android:background="@drawable/circle_fl"

        android:layout_alignTop="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView11"
        android:background="@drawable/circle_em"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/imageView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Next"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:background="#212338"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>